<p style="color: green"><%= notice %></p>

<h1 class="is-size-3 pb-3"> Events</h1>
<% if user_signed_in? && current_user.id == @events&.first&.lounge&.user_id %>
  <%= link_to "New event", new_lounge_event_path %>
<% end %>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
  <% end %>
</div>

<%= link_to "New Event", new_lounge_event_path(@lounge), class: "button is-primary is-light card-footer-item" %>
