<%= form_with(model: [@lounge, event]) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_field :event_date %>
  </div>

  <div class="field">
    <%= form.label :event_type %>
    <%= form.text_field :event_type %>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_field :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_field :end_time %>
  </div>

  <div class="field">
    <%= form.label :maximum_capacity %>
    <%= form.number_field :maximum_capacity, in: 1..100, step: 1 %>
  </div>

  <div class="field">
    <%= form.label :rsvp_needed %>
    <%= form.check_box :rsvp_needed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>