<% @featured_lounges.first(3) %>
  <div class="columns">
    <div class="column is-one-third">
      <div class="card pb-2">
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48 mb-2">
                <% if @featured_lounges[0].logo.present? %>
                  <%= image_tag(@featured_lounges[0].logo) %>
                <% else %>
                  <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                <% end %>
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= @featured_lounges[0].name %></p>
              <p class="subtitle is-6"><%= @featured_lounges[0].city %>, <%= @featured_lounges[0].state %></p>
            </div>
          </div>

          <div class="content">
            <%= @featured_lounges[0].details %>
          </div>

          <div class="buttons">
            <% if user_signed_in? && @featured_lounges[0].user_id == current_user.id %>
              <%= link_to "Edit", edit_lounge_path(@featured_lounges[0]), class: "button is-primary is-light" %>
              <%= link_to "View Events", lounge_events_url(@featured_lounges[0]), class: "button is-primary is-light" %>
            <% else %>
              <%= link_to "View Events", lounge_events_url(@featured_lounges[0]), class: "is-primary" %>
            <% end %>
          </div>
        </div>
      </div><br />
    </div>

