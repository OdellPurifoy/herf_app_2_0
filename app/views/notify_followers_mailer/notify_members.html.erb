<% if @event.lounge.logo.present? %>
  <%= image_tag(@event.lounge.logo, size: "55x55") %>
<% else %>
  <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
<% end %>

<h1><%= @membership&.first_name %></h1>

<%= @event.lounge.name %> invites you to <%= @event.name %>!
<p>Here are the details</p>
<p> 
  <b>Event:</b> <%= "#{@event.name}" %><br/>
  <b>Date:</b> <%= "#{@event.event_date.strftime('%b %e, %Y')}" %><br/>
  <b>Start Time:</b> <%= "#{@event.start_time.strftime('%l:%M %P')}" %><br/>
  <b>End Time:</b> <%= "#{@event.end_time.strftime('%l:%M %P')}" %><br/>
  <b>Location:</b> <%= "#{@event.lounge.address_street_1}, #{@event.lounge.city}, #{@event.lounge.state}, #{@event.lounge.zip_code}" %><br/>
  <b>Phone:</b> <%= "#{@event.lounge.phone})" %><br/>
</p>

<p>
 <%= @event.event_description %>
</p>