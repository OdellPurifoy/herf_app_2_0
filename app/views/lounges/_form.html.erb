<%= bootstrap_form_for(@lounge) do |form| %>
  <% if lounge.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(lounge.errors.count, "error") %> prohibited this lounge from being saved:</h2>

        <ul>
          <% lounge.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <div class="control">
        <%= form.text_field :name %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.text_field :address_street_1 %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.text_field :address_street_2 %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :state, CS.states(:us).invert, { prompt: "Select a state" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.text_field :city %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.text_field :zip_code %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.email_field :email %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.telephone_field :phone %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :weekday_opening_hour, Lounge::AM_HOURS_DISPLAY %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :weekday_closing_hour, Lounge::PM_HOURS_DISPLAY %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :weekend_opening_hour, Lounge::AM_HOURS_DISPLAY %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :weekend_closing_hour, Lounge::PM_HOURS_DISPLAY %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.select :time_zone, Lounge::TIME_ZONES %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.text_area :details, placeholder: "Tell us about your lounge." %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.check_box :outside_drinks_allowed  %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= form.check_box :outside_cigars_allowed %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= image_tag lounge.logo if lounge.logo.present? %>
        <%= form.file_field :logo %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <% if lounge.display_image.present? %>
         <div id="<%= dom_id(lounge, :display_image) %>">
            <%= image_tag lounge.display_image  %>
            <%= link_to "Remove display image", lounge_display_image_path(@lounge), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
          </div>
        <% end %>
        <%= form.file_field :display_image %>
      </div>
    </div>

    <div class="field">
      <%= form.submit "Save" %>
    </div>
  <% end %>